@{
    Layout = "Shared/_Layout.cshtml";
}

<div class="beach-background">
    <div class="nav">
                <div class="orange container">
                        <h1><span class="fancy">Weather Forecast:</span> @Model["game"].GetTemperature()&degF and @Model["game"].GetForecast()</h1>
                            <h1>Cost Per Pitcher: $<span id="pitcher-price">@Model["game"].GetPitcherPrice()</span></h1>
                        <h2>You're playing as: @Model["player"].GetUsername()   </h2>
                </div>
    </div>
        <div class="spacing">
        </div>
            <div class="lemonade-stand">
                <img class="stand" src="../Content/img/stand.png"/>
                <img class="beyonce" src="../Content/img/beyonce.png"/>
                <div class="prices chalkboard">

                        <h3>You currently have: $<span id="player-money">@Model["player"].GetMoney()</span></h3>
                        <form class="form-inline" action="/results" method="post">
                            <div class="form-group">
                                <label for="cup">Price Per Cup</label>
                                <input class="form-control" id="small-input" type="number" name="cup" step="0.10" min="0" max="3" required>
                            </div>
                            <div class="form-group">
                                <label for="pitcher">Number of Pitchers</label>
                                <div class="input-group">
                                    <span class="input-group-addon">$</span>
                                    <input class="form-control pitcher" id="tiny-input" type="number" name="pitcher" min="1" max="@Model["limit"]">
                                </div>
                            </div>
                                <input type="hidden" name="game-id" value="@Model["game"].GetId()">
                            <div class="row">
                                <div class="col-xs-9">
                                </div>
                                <button class="btn btn-sm btn-info col-xs-3" id="tiny-input" type="submit" name="submit">Play!</button>
                            </div>
                        </form>

                </div>
            </div>
        </div>
    </div>
</div>
