@{
    Layout = "Shared/_Layout.cshtml";
}

<div class="container">
  <h1 class="fancy">Day @Model["count"] Results</h1>
  <h2>Good job, you made it through another day! Here's how you did:</h2>
  <h3>Cups Sold: @Model["cupsSold"]</h3>
  <h3>Money Made: @Model["profit"]</h3>
  <h3>Total Funds Available: @Model["remainingMoney"]</h3>
  <form action="/another/game" method="post">
      <input type="hidden" name="player-id" value="@Model["game"].GetPlayer().GetId()">
      <button type="submit" class="btn btn-info" name="button">Next</button>
  </form>

</div>
